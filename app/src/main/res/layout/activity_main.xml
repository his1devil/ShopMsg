<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fat.shopmsg.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/hdl"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAIDILAO HotPot"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the taste where you never forget !"
        android:layout_alignBottom="@id/name"
        android:paddingLeft="16dp"
        android:textStyle="italic"
        android:textColor="@android:color/white"/>


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="10:00 AM - 4:00 AM"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/time"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="MOBILE: 15000000001"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/mobile"
        android:text="Location: ShangHai"
        android:paddingLeft="16dp"
        android:textSize="15sp"
        android:textColor="@android:color/holo_green_light"/>


</RelativeLayout>
